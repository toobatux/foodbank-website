@page
@model foodbank_website.Pages.EventsModel
@{
    ViewData["Title"] = "Events";
}

<h1 class="page-header">@ViewData["Title"]</h1>

<div style="padding: 10px;">
    <a asp-page="/Events/Index">Event Details</a>
</div>

<div class="row">
    <div class="col-2">

    </div>
    <div class="col-8">
        <div class="row justify-content-center body-card-container" style="margin-top: 40px;">
            @foreach (var item in Model.Event)
            {
                if (item.Date > DateTime.Now)
                {
                    <div style="padding: 10px;">
                        <div class="mb-4">
                            <div class="card border-secondary event-card">
                                <div class="card-body">
                                    <div class="event-header">
                                        <a class="card-title" asp-page="/Events/Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Title)</a>
                                    </div>
                                    <p class="float-right">(@Html.DisplayFor(modelItem => item.currentMembers) / @Html.DisplayFor(modelItem => item.totalMembers))</p>
                                    <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Location) - @Html.DisplayFor(modelItem => item.Date)<br /></h6>
                                    @*<h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Location)<br /></h6>*@
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                    <a asp-page="/Events/Edit" asp-route-id="@item.ID">Edit</a> - <a asp-page="/Events/Delete" asp-route-id="@item.ID">Delete</a>
                                    <a asp-page="/Events/Join" asp-route-id="@item.ID" class="btn btn-primary float-right">Join</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div class="col-2">
        <a class="btn btn-primary float-left" style="margin-left: 40px;" asp-page="/Events/Create">Create New</a>
    </div>
</div>


